<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">
    <TextView
    android:id="@+id/report_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/report_label"
    android:textSize="15sp"
    android:layout_marginStart="30dp"
    android:layout_marginLeft="30dp"
    android:layout_alignBaseline="@+id/name_detail"
    android:layout_alignBottom="@+id/name_detail"
    />
    <TextView
    android:id="@+id/name_detail"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:text="@string/name_detail"
    android:textSize="15sp"
    android:layout_toRightOf="@+id/report_label"
    android:layout_toEndOf="@+id/report_label"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="5dp"
    android:layout_marginStart="5dp"
    />
<TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/report_label"
        android:layout_marginTop="5dp"
        android:id="@+id/tableyenyewe">
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Mathematics"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/math"
                android:layout_column="2" />
            </TableRow>
            <TableRow
            android:layout_marginTop="5dp">
            <TextView
                android:text="Chemistry"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"/>
            <TextView
                android:width="200px"
                android:id="@+id/chemistry"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </TableRow>
    <TableRow
            android:layout_marginTop="5dp">

            <TextView
                android:text="Kiswahili"
                android:textSize="20sp"
                android:textStyle="bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1" />

            <TextView
                android:id="@+id/kiswahili"
                android:width="100px"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/textView2"
                android:textSize="20sp"
                android:textStyle="bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Physics" />

            <TextView
                android:id="@+id/physics"
                android:width="100px"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp">
        <TextView
            android:text="Geography"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1" />

        <TextView
            android:id="@+id/geography"
            android:width="100px"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_column="1"
                android:text="History"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/history"
                android:width="100px"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp">

            <TextView
                android:text="Biology"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"

                android:layout_height="wrap_content"
                android:layout_column="1" />

            <TextView
                android:id="@+id/biology"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:width="100px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_height="fill_parent">

            <TextView
                android:text="English"
                android:textSize="20sp"
                android:textStyle="bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1" />

            <TextView
                android:id="@+id/english"
                android:width="100px"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp">

            <TextView
                android:text="E-Activities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"

                android:layout_column="1" />

            <TextView
                android:id="@+id/extracurr"
                android:width="100px"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_column="1"
                android:text="TOTAL"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total"
                android:width="100px"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:text="AVERAGE"
                android:textSize="20sp"
                android:textStyle="bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1" />

            <TextView
                android:id="@+id/avg"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:width="100px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:text="POSITION"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1" />

            <TextView
                android:id="@+id/position"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:width="100px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
</TableLayout>
<mehdi.sakout.fancybuttons.FancyButton
    android:id="@+id/button_fold"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        fancy:fb_textColor="@color/genre"
        fancy:fb_text="@string/back"
        fancy:fb_textSize="20dp"
        fancy:fb_ghost="true"
        fancy:fb_useSystemFont="true"
        fancy:fb_borderWidth="1dp"
        fancy:fb_borderColor="@color/list_divider"
        fancy:fb_radius="25dp"
        fancy:fb_focusColor="@color/list_divider"
        fancy:fb_textGravity="center_vertical"

        android:layout_below="@+id/tableyenyewe"
     />


</RelativeLayout>
